{
  "builders": [
    {
      "type": "docker",
      "image": "openjdk:11",
      "commit": true,
      "changes": [
        "EXPOSE 8080/tcp",
        "ENTRYPOINT [\"java\", \"-jar\", \"/opt/hello/lib/containerdemo-0.3.0-socket.jar\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /opt/hello/lib"
      ]
    },
    {
      "type": "file",
      "source": "target/containerdemo-0.3.0-socket-jar-with-dependencies.jar",
      "destination": "/opt/hello/lib/containerdemo-0.3.0-socket.jar"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "hello-socket",
        "tag": "latest"
      }
    ]
  ]
}
